# Koha instance kohadev Apache config.

# Overide default settings from main config file
Timeout ${APACHE_TIMEOUT}
KeepAlive On
MaxKeepAliveRequests 1000
KeepAliveTimeout 3

## prefork MPM
<IfModule mpm_prefork_module>
  ServerLimit              512
  StartServers             ${APACHE_MINSERVERS}
  MinSpareServers          ${APACHE_MINSERVERS}
  MaxSpareServers          10
  MaxRequestWorkers        500
  MaxConnectionsPerChild   10000
</IfModule>

## mod_remoteip - Replace client ip from proxy headers
<IfModule mpm_remoteip>
  RemoteIPHeader X-Forwarded-For
  RemoteIPProxiesHeader X-Forwarded-By
  RemoteIPInternalProxy ${APACHE_REMOTE_INTERNAL_PROXY}
</IfModule>

## mod_status
<IfModule mod_status.c>
  # Allow server status reports generated by mod_status,
  # with the URL of http://servername/server-status

  <Location /server-status>
    SetHandler server-status
    Require local
    Require ip ${APACHE_SERVER_STATUS_NET}
  </Location>

  # Keep track of extended status information for each request
  ExtendedStatus On

  <IfModule mod_proxy.c>
    # Show Proxy LoadBalancer status in mod_status
    ProxyStatus On
  </IfModule>
</IfModule>

## mod_info
<IfModule mod_info.c>
  # Allow remote server configuration reports, with the URL of
  #  http://servername/server-info (requires that mod_info.c be loaded).

  <Location /server-info>
    SetHandler server-info
    Require local
    Require ip ${APACHE_SERVER_STATUS_NET}
  </Location>
</IfModule>

# OPAC
<VirtualHost *:8080>
   <IfVersion >= 2.4>
      Define instance "$KOHA_INSTANCE"
   </IfVersion>
   Include /etc/koha/apache-shared.conf
#  Include /etc/koha/apache-shared-disable.conf
#  Include /etc/koha/apache-shared-opac-plack.conf
   Include /etc/koha/apache-shared-opac.conf

   ServerName $KOHA_INSTANCE
   SetEnv KOHA_CONF "/etc/koha/sites/$KOHA_INSTANCE/koha-conf.xml"
   SetEnv PERL5LIB "/usr/share/koha/lib"
   AssignUserID $KOHA_INSTANCE-koha $KOHA_INSTANCE-koha

   ErrorLog    /var/log/koha/$KOHA_INSTANCE/opac-error.log
#  TransferLog /var/log/koha/$KOHA_INSTANCE/opac-access.log
#  RewriteLog  /var/log/koha/$KOHA_INSTANCE/opac-rewrite.log
</VirtualHost>

# Intranet
<VirtualHost *:8081>
